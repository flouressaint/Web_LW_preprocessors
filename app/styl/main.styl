html
	height 100vh
	background-color #164B69;
	font-family Arial
	font-size 14px

body
	min-height 700px
	min-width  700px
	margin 30px
	padding 20px 30px
	background-color #E3E3E3
	display flex
	flex-direction column

	header
		display none
	nav
		display flex
		flex-direction row
		justify-content center
		font-weight bold
		margin 0px 0px 20px 0px
		a
			padding 10px 20px
			margin 3px
			color black
			text-decoration none
			&:hover
				background-color #DCDCDC
			&.active
				background-color #DCDCDC
	aside
		display none
	footer
		display none

.text
	text-align justify
	line-height 2
	text-indent 30px
	word-spacing 10px

@media (max-width 600px)
	body
		min-height auto
		min-width auto
	nav
		flex-wrap wrap
	.text
		font-size small
		line-height 1.5